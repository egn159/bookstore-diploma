%h3.general-subtitle Credit Card
= simple_form_for @order, method: :put, url: "#{checkout_next_path}", html: {novalidate: false} do |f|
  %div.max-600.mb-80
    = f.simple_fields_for :credit_card do |card|
      .form-group
        = card.label :number, "Card Number", class: "control-label input-label"
        = card.input :number, :input_html => { class: "form-control"}, placeholder: "Card Number", label: false, required: true
      .row
        .col-sm-6
          .form-group
            = card.label :name, "Name on Card", class: "control-label input-label"
            = card.input :name, :input_html => { class: "form-control"}, placeholder: "Name on Card", label: false
        .col-sm-3
          .form-group
            = card.label :expires, "MM / YY", class: "control-label input-label"
            = card.input :expires, :input_html => { class: "form-control"}, placeholder: "MM / YY", label: false, required: true
        .col-sm-3
          .form-group.relative
            = card.label :cvv, "CVV", class: "control-label input-label"
            = card.input :cvv, :input_html => { class: "form-control", type: "password"}, placeholder: "CVV", label: false, required: true
            %i.fa.fa-question-circle.general-form-help
  .general-text-align
    %p.in-gold-500.font-18 Order Summary
    %table.general-summary-table
      %tr
        %td
          %p.font-16 Subtotal:
        %td
          %p.font-16 €117.69
      %tr
        %td
          %p.font-16 Coupon:
        %td
          %p.font-16 €0.00
      %tr
        %td
          %strong.font-18 Order Total:
        %td
          %strong.font-18 €117.69
  .text-center
    = f.button :submit, "Save and Continue", class: "btn btn-default mb-80"
