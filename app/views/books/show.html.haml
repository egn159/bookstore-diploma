%main.container
  %a.general-back-link{href: "#{url_for(:back)}"}
    %i.fa.fa-long-arrow-left.mr-15
    #{t('action.backtoresults')}
  .row
    .col-sm-6
      .product-gallery
        .mb-20
          %img.img-responsive{src: "#{try_image(@book, :book_image)}"}
          - unless @book.images.empty?
            .images.clearfix
              - @book.images[1..@book.images.size].each do |item|
                %a.img-link{href: "#"}
                  = image_tag(item.image.url(:smallbook_image))
    .col-sm-6
      %h1.mt-res-0= @book.name
      %p.lead.small= authors_to_list(@book.authors)
      .row
        = form_tag('/to_cart', method: 'post', class: "egn_book_cart") do
          .col-xs-12.col-md-4
            %p.h1.in-gold-500.mt-10= "#{price_format(@book.price)}"
          .col-xs-5.col-md-3
            .input-group.general-position
              %a.input-link.item-change-quantity{href: "javascript:void(0)", data: { action: "minus" } }
                %i.fa.fa-minus.line-height-40
              %input.form-control.quantity-input{type: "text", name: 'quantity', value: "1"}
              %a.input-link.item-change-quantity{href: "javascript:void(0)", data: { action: "plus" } }
                %i.fa.fa-plus.line-height-40
          .col-xs-7.col-md-5
            %input{type: "hidden", name: "item_id", value: "#{@book.id}"}
            %button.btn.btn-default.pull-right.general-position{type: 'submit'} #{t('action.addtocart')}
      .general-info-wrap.divider-lg
        %p #{t('books.description')}
        %p.lead.small.line-height-2
          = cutted_desc(@book.info_book.full_desc)
      .general-info-wrap.divider-lg
        .clearfix
          %p.pull-left #{t('books.published')}
          %p.lead.small.pull-right= @book.info_book.published
      .general-info-wrap.divider-lg
        .clearfix
          %p.pull-left #{t('books.dimensions')}
          %p.lead.small.pull-right= "H: #{@book.info_book.height} x W: #{@book.info_book.width} x D: #{@book.info_book.depth}"
      .general-info-wrap.divider-lg
        .clearfix
          %p.pull-left #{t('books.materials')}
          %p.lead.small.pull-right= @book.info_book.materials
  .mb-80
    = render partial: "reviews", object: @book
