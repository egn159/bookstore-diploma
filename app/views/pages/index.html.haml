%main.container
  #slider.carousel.slide{'data-ride': "carousel"}
    %ol.carousel-indicators
      - @books_slider.each_with_index do |book, i|
        /%li.active{'data-target': "#slider", 'data-slide-to': "0"}
        %li{:class => ("active" if i.zero?), 'data-target': "#slider", 'data-slide-to': i}
    .carousel-inner{role: "listbox"}
      - @books_slider.each_with_index do |book, i|
        .item{:class => ("active" if i.zero?)}
          .row
            .col-sm-5
              .general-img-wrap
                %img.img-shadow.general-thumbnail-img{src: "http://jonathantweedy.com/resources/thumbs/SmashingBook5ResponsiveWebDesign.jpg", alt: "design-book"}
            .col-sm-7
              .mb-60
                %h1= book.name
                %p.lead= book.short_desc
                %p.lead.small= book.authors
                .general-align
                  %button.btn.btn-primary Buy Now
    %a.left.carousel-control{href: "#slider", role: "button", 'data-slide': "prev"}
      %span.icon-prev{'aria-hidden': "true"}
      %span.sr-only Previous
    %a.right.carousel-control{href: "#slider", role: "button", 'data-slide': "next"}
      %span.icon-next{'aria-hidden': "true"}
      %span.sr-only Next
.container
  .jumbotron.text-center.mb-0
    %h2.h1 Welcome to our amazing Bookstore!
    .mb-res-50
      %p We pore through hundreds of new books each month and select the five best we can find to share with our members.
    = link_to "Get Started", catalog_path, class: "btn btn-default"
  .mb-35
    %h3 Best Sellers
    .row
      - @bestsellers.each do |item|
        .col-sm-6.col-md-3
          .general-thumb-wrap
            .thumbnail.general-thumbnail
              %img.img-shadow.general-thumbnail-img{src: "http://jonathantweedy.com/resources/thumbs/SmashingBook5ResponsiveWebDesign.jpg", alt: "design-book"}
              .thumb-hover
                .general-thumb-link-wrap
                  = link_to book_path(item), class: "thumb-hover-link" do
                    %i.fa.fa-eye.thumb-icon{'aria-hidden': "true"}
                  = link_to to_cart_path(item), class: "thumb-hover-link", method: :post do
                    %i.fa.fa-shopping-cart.thumb-icon
          .mb-35
            .clearfix
              %p.pull-right.font-16.in-gold-500= "â‚¬#{item.price}"
              %p.title.mr-55= item.name
            %span.divider-sm
            %p.lead.small= item.authors

