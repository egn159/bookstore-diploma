%main.container.general-main-wrap
  .text-center
    %h3.general-login-title Sign Up
    %a.general-login-icon{href: "#"}
      %i.fa.fa-facebook-official
    %p.general-login-text or
  = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => "general-form"}) do |f|
    = f.error_notification
    .form-group.mb-30
      = f.label :email, "Enter Email", class: "control-label input-label"
      = f.input :email, required: false, autofocus: true, :input_html => { :class => "form-control"}, placeholder: "Enter Email", label: false
    .form-group.mb-30
      = f.label :password, "Password", class: "control-label input-label"
      = f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length && f.error_notification.nil?), placeholder: "Password", :input_html => {:class=> "form-control", :id=>"password"}, label: false
    .form-group.mb-30
      = f.label :password, "Confirm Password", class: "control-label input-label"
      = f.input :password_confirmation, required: false, placeholder: "Confirm Password", :input_html => {:class=> "form-control", :id=>"password"}, label: false
    .text-center
      %button.btn.btn-default.mb-20 Sign Up
  %p.general-sign-text.text-center
    Have an Account?
    %a.in-gold-500{href: "#{new_user_session_path}"} Log In
