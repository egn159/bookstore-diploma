%main.container.general-main-wrap
  .text-center
    %h1.mb-30 Set new password
  = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "general-form" }) do |f|
    = f.error_notification
    = f.input :reset_password_token, as: :hidden
    = f.full_error :reset_password_token
    .form-group.mb-25
      = f.label :password, "Type a new Password", class: "control-label input-label"
      /%label.control-label.input-label{for: "email"} Enter Email
      /%input#email.form-control{name:"email", type: "email", placeholder: "Enter Email"}
      /= f.input :email, required: false, autofocus: true, :input_html => { :class => "form-control"}, placeholder: "Enter your email", label: false
      -#hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),

      = f.input :password, label: false, required: true, autofocus: true, :input_html => { :class => "form-control"}, placeholder: "Type a new Password"

      = f.label :password_confirmation, "Confirm password", class: "control-label input-label"
      = f.input :password_confirmation, label: false, required: true, :input_html => { :class => "form-control"}, placeholder: "Confirm password"
    .text-center
      = f.button :submit, "Change", class: "btn btn-default mb-20"





