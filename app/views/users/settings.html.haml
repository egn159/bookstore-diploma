%main.container
  %h1.general-title-margin Settings
  %ul.nav.clearfix.mb-20{role: "tablist"}
    %li.tab-item.active{role: "presentation"}
      %a.tab-link{href: "#address", 'aria-controls': "address", role: "tab", 'data-toggle': "tab"} Address
    %li.tab-item{role: "presentation"}
      %a.tab-link{href: "#privacy", 'aria-controls': "privacy", role: "tab", 'data-toggle': "tab"} Privacy
  .tab-content
    #address.tab-pane.fade.in.active{role: "tabpanel"}
      .general-main-wrap

        .hidden-xs.hidden-sm
          .row
            .col-md-5
              %h3.general-subtitle.mt-0 Billing Address
            .col-md-5.col-md-offset-1
              %h3.general-subtitle.mt-0 Shipping Address
        .row
          = simple_form_for @user do |f|
            = f.simple_fields_for :billing_address, wrapper: :custom do |bia|
              .col-md-5.mb-40
                .visible-xs.visible-sm
                  %h3.general-subtitle.mt-0 Billing Address
                = render partial: "address", locals: { adr: bia }
                .text-center.general-text-align
                  = f.button :submit, "Save", class: "btn btn-default mb-20"
          = simple_form_for @user do |f|
            = f.simple_fields_for :shipping_address, wrapper: :custom do |sha|
              .col-md-5.col-md-offset-1.mb-25
                .visible-xs.visible-sm
                  %h3.general-subtitle.mt-0 Shipping Address
                = render partial: "address", locals: { adr: sha }
                .text-center.general-text-align
                  = f.button :submit, "Save", class: "btn btn-default mb-20"
    #privacy.tab-pane.fade{role: "tabpanel"}
      .row.mb-60

        .col-sm-5
          %p.in-gold-500.font-18.mb-25 Email
          = simple_form_for @user, class: "general-form-md" do |f|
            .form-group.mb-35
              = f.label :email, "Enter Email", class: "control-label input-label"
              = f.input :email, :input_html => { class: "form-control"}, placeholder: "Enter your email", label: false
              -#%label.control-label.input-label{for: "email"} Enter Email
              -#%input#email.form-control{name:"email", type: "email", }
            .general-text-align
              = f.button "submit", "Save", class: "btn btn-default mb-35"
              -#%button.btn.btn-default.mb-35 Save
        - if current_user.provider.nil?
          .col-sm-5.col-sm-offset-1
            %p.in-gold-500.font-18.mb-25 Password
            = simple_form_for @user, :url => "/users/update_password", method: "patch", html: {novalidate: false}, class: "general-form-md divider-lg-bottom pb-25" do |f|
              .form-group.mb-30
                = f.label :current_password, "Old Password", class: "control-label input-label"
                = f.input :current_password, :input_html => { class: "form-control"}, placeholder: "Old Password", label: false, required: true
              .form-group.mb-30
                = f.label :password, "New Password", class: "control-label input-label"
                = f.input :password, :input_html => { class: "form-control"}, placeholder: "New Password", label: false, required: true
                -#%label.control-label.input-label{for: "password"} New Password
                -#%input#password.form-control{name:"password", type: "password", placeholder: "New Password"}
              .form-group.mb-40
                = f.label :password_confirmation, "Confirm Password", class: "control-label input-label"
                = f.input :password_confirmation, :input_html => { class: "form-control"}, placeholder: "Confirm Password", label: false, required: true
              .general-text-align
                = f.button "submit", "Save", class: "btn btn-default mb-35"
                -#%button.btn.disabled.mb-10 Save
        .col-sm-12
          %p.in-gold-500.font-18.mb-25 Remove Account
          = form_for "delete_user", method: :delete, url: "#{registration_path(@user)}", data: { confirm: "Are you sure?"}, html: {novalidate: false} do |f|
            .general-settings-btn
              %button.btn.btn-default.mb-20{type: "submit"} Please Remove My Account
            .form-group.checkbox.general-settings-checkbox
              %label.checkbox-label
                %input.checkbox-input{type: "checkbox", hidden: "true", name: "confirm_delete_account", required: true}
                %span.checkbox-icon
                  %i.fa.fa-check
                %span.checkbox-text I understand that all data will be lost
