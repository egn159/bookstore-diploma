= simple_form_for @review, url: reviews_path, method: "post" do |rew|
  = rew.input :title, input_html: { class: "form-control"}
  = rew.input :text, as: :text, input_html: { class: "form-control"}
  = rew.input :rating, collection: 1..5
  = rew.hidden_field :book_id, value: "#{@book.id}"
  = rew.button :submit, t('reviews.post'), class: 'btn btn-default'


